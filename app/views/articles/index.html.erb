<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
<div>
  <%= link_to "New Article", new_article_path %>
</div>
<div>
  <%= link_to "First page", articles_path(page: 0) %>
  <%= link_to "Previous Page", articles_path(page: @page - 1) %>
  <%= link_to "Next Page", articles_path(page: @page + 1) %>
  <%= link_to "Last Page", articles_path(page: @last_page) %>
</div>